        "@typescript-eslint/parser": "^4.33.0",
        "autoprefixer": "^10.4.2",
        "cssnano": "^5.0.16",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-svelte3": "^3.4.0",
        "postcss": "^8.4.6",
        "postcss-load-config": "^3.1.1",
        "prettier": "^2.5.1",
        "prettier-plugin-tailwindcss": "^0.1.5",
        "svelte": "^3.46.4",
        "svelte-check": "^2.4.2",
        "svelte-preprocess": "^4.10.2",
        "tailwindcss": "^3.0.18",
        "tslib": "^2.3.1",
        "typescript": "^4.5.5"
